// • Fine calculation

mysql> SELECT
    -> student_name,
    -> book_id,
    -> GREATEST(DATEDIFF(CURDATE(), due_date), 0) * 10 AS fine
    -> FROM borrow_records
    -> WHERE return_date IS NULL;
